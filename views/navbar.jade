mixin nav-link(url, title)
  - var isActive = currentUrl === url;
  li.nav-item(class="#{isActive ? 'active' : ''}")
    a.nav-link(class!=attributes.class, href=url)
      if block
        block
      else
        | #{title}
      if isActive
        span.sr-only (current)

